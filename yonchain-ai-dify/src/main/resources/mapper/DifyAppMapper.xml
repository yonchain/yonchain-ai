<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yonchain.ai.dify.mapper.DifyAppMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yonchain.ai.dify.entity.DifyAppEntity">
        <!-- 主键ID -->
        <id column="id" property="id" jdbcType="OTHER"/>
        <!-- 租户ID -->
        <result column="tenant_id" property="tenantId" jdbcType="OTHER"/>
        <!-- 应用名称 -->
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <!-- 应用模式：completion/chat -->
        <result column="mode" property="mode" jdbcType="VARCHAR"/>
        <!-- 应用提供商 -->
        <result column="provider" property="provider" jdbcType="VARCHAR"/>
        <!-- API密钥 -->
        <result column="api_key" property="apiKey" jdbcType="VARCHAR"/>
        <!-- 应用基础URL -->
        <result column="base_url" property="baseUrl" jdbcType="VARCHAR"/>
        <!-- 应用图标URL -->
        <result column="icon" property="icon" jdbcType="VARCHAR"/>
        <!-- 图标背景色 -->
        <result column="icon_background" property="iconBackground" jdbcType="VARCHAR"/>
        <!-- 应用状态：running/stopped -->
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <!-- 创建时间 -->
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <!-- 更新时间 -->
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
        <!-- 应用描述 -->
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <!-- 图标类型：emoji/custom -->
        <result column="icon_type" property="iconType" jdbcType="VARCHAR"/>
        <!-- 创建者ID -->
        <result column="created_by" property="createdBy" jdbcType="OTHER"/>
        <!-- 更新者ID -->
        <result column="updated_by" property="updatedBy" jdbcType="OTHER"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, tenant_id, name, mode, icon, icon_background, provider, status,
        description, icon_type, created_by, updated_by,base_url,api_key
    </sql>

    <!-- 通过ID查询单个应用 -->
    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from dify_app
        where id = #{id}::uuid
    </select>

    <!-- 查询应用列表 -->
    <select id="selectList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from dify_app app
        where tenant_id = #{tenantId}::uuid
        <if test="params.name != null and params.name != ''">and name like concat('%', #{params.name}, '%')</if>
        <if test="params.mode != null and params.mode != ''">and mode = #{params.mode}</if>
        <if test="params.status != null and params.status != ''">and status = #{params.status}</if>
        <if test="params.roleIds != null and params.roleIds.size() > 0">
            AND EXISTS (
            SELECT 1 FROM app_role
            WHERE app_id = apps.id
            AND role_id IN
            <foreach collection="params.roleIds" item="roleId" open="(" separator="," close=")">
                #{roleId}::uuid
            </foreach>
            )
        </if>
        order by created_at desc
    </select>

    <!-- 新增应用 -->
    <insert id="insert" >
        insert into dify_app
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="tenantId != null">tenant_id,</if>
            <if test="name != null">name,</if>
            <if test="mode != null">mode,</if>
            <if test="baseUrl != null">base_url,</if>
            <if test="apiKey != null">api_key,</if>
            <if test="icon != null">icon,</if>
            <if test="iconBackground != null">icon_background,</if>
            <if test="provider != null">provider,</if>
            <if test="status != null">status,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
            <if test="description != null">description,</if>
            <if test="iconType != null">icon_type,</if>
            <if test="createdBy != null">created_by,</if>
            <if test="updatedBy != null">updated_by,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id}::uuid,</if>
            <if test="tenantId != null">#{tenantId}::uuid,</if>
            <if test="name != null">#{name},</if>
            <if test="mode != null">#{mode},</if>
            <if test="baseUrl != null">#{baseUrl},</if>
            <if test="apiKey != null">#{apiKey},</if>
            <if test="icon != null">#{icon},</if>
            <if test="iconBackground != null">#{iconBackground},</if>
            <if test="provider != null">#{provider},</if>
            <if test="status != null">#{status},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="description != null">#{description},</if>
            <if test="iconType != null">#{iconType},</if>
            <if test="createdBy != null">#{createdBy}::uuid,</if>
            <if test="updatedBy != null">#{updatedBy}::uuid,</if>
        </trim>
    </insert>

    <!-- 修改应用 -->
    <update id="update" >
        update dify_app
        <set>
            <if test="tenantId != null">tenant_id = #{tenantId}::uuid,</if>
            <if test="name != null">name = #{name},</if>
            <if test="mode != null">mode = #{mode},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="baseUrl != null">base_url = #{baseUrl},</if>
            <if test="apiKey != null">api_key = #{apiKey},</if>
            <if test="iconBackground != null">icon_background = #{iconBackground},</if>
            <if test="provider != null">provider = #{provider},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="description != null">description = #{description},</if>
            <if test="iconType != null">icon_type = #{iconType},</if>
            <if test="updatedBy != null">updated_by = #{updatedBy}::uuid,</if>
        </set>
        where id = #{id}::uuid
    </update>

    <!-- 通过ID删除应用 -->
    <delete id="deleteById">
        delete from dify_app where id = #{id}::uuid
    </delete>

    <!-- 通过ID批量删除应用 -->
    <delete id="deleteByIds">
        delete from dify_app where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}::uuid
        </foreach>
    </delete>
    
</mapper>
