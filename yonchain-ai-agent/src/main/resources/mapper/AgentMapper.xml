<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yonchain.ai.agent.mapper.AgentMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yonchain.ai.agent.entity.AgentEntity">
        <!-- 主键ID -->
        <id column="id" property="id" jdbcType="OTHER"/>
        <!-- 租户ID -->
        <result column="tenant_id" property="tenantId" jdbcType="OTHER"/>
        <!-- 应用名称 -->
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <!-- 应用图标URL -->
        <result column="icon" property="icon" jdbcType="VARCHAR"/>
        <!-- 图标背景色 -->
        <result column="icon_background" property="iconBackground" jdbcType="VARCHAR"/>
        <!-- 应用状态：running/stopped -->
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <!-- 创建时间 -->
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <!-- 更新时间 -->
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
        <!-- 应用描述 -->
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <!-- 图标类型：emoji/custom -->
        <result column="icon_type" property="iconType" jdbcType="VARCHAR"/>
        <!-- 创建者ID -->
        <result column="created_by" property="createdBy" jdbcType="OTHER"/>
        <!-- 更新者ID -->
        <result column="updated_by" property="updatedBy" jdbcType="OTHER"/>
        <!-- 提示词 -->
        <result column="prompt" property="prompt" jdbcType="VARCHAR"/>
        <!-- 模型ID -->
        <result column="model_id" property="modelId" jdbcType="VARCHAR"/>
        <!-- 开场白 -->
        <result column="welcome_message" property="welcomeMessage" jdbcType="VARCHAR"/>
        <!-- 知识库ID列表（JSON格式） -->
        <result column="knowledge_id" property="knowledgeId" jdbcType="VARCHAR"/>
        <!-- 插件ID列表（JSON格式） -->
        <result column="plugin_id" property="pluginId" jdbcType="VARCHAR"/>
        <!-- MCP配置（JSON格式） -->
        <result column="mcp" property="mcp" jdbcType="VARCHAR"/>
        <!-- 工作流ID -->
        <result column="workflow_id" property="workflowId" jdbcType="OTHER"/>
        <!-- 发布时间 -->
        <result column="published_at" property="publishedAt" jdbcType="TIMESTAMP"/>
        <!-- 发布者ID -->
        <result column="published_by" property="publishedBy" jdbcType="OTHER"/>
        <!-- 发布版本 -->
        <result column="publish_version" property="publishVersion" jdbcType="INTEGER"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, tenant_id, name,  icon, icon_background, status,
        created_at, updated_at, description, icon_type, created_by, updated_by,
        prompt, model_id, welcome_message, knowledge_id, plugin_id, mcp,
        workflow_id, published_at, published_by, publish_version
    </sql>

    <!-- 通过ID查询单个应用 -->
    <select id="selectById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from agent
        where id = #{id}::uuid
    </select>

    <!-- 查询应用列表 -->
    <select id="selectList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from agent
        where tenant_id = #{tenantId}::uuid
        <if test="params.name != null and params.name != ''">and name like concat('%', #{params.name}, '%')</if>
        <if test="params.status != null and params.status != ''">and status = #{params.status}</if>
        <if test="params.roleIds != null and params.roleIds.size() > 0">
            AND EXISTS (
            SELECT 1 from agent_role
            WHERE app_id = agent.id
            AND role_id IN
            <foreach collection="params.roleIds" item="roleId" open="(" separator="," close=")">
                #{roleId}::uuid
            </foreach>
            )
        </if>
        order by created_at desc
    </select>

    <!-- 新增应用 -->
    <insert id="insert" >
        insert into agent
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="tenantId != null">tenant_id,</if>
            <if test="name != null">name,</if>
            <if test="icon != null">icon,</if>
            <if test="iconBackground != null">icon_background,</if>
            <if test="status != null">status,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
            <if test="description != null">description,</if>
            <if test="iconType != null">icon_type,</if>
            <if test="createdBy != null">created_by,</if>
            <if test="updatedBy != null">updated_by,</if>
            <if test="prompt != null">prompt,</if>
            <if test="modelId != null">model_id,</if>
            <if test="welcomeMessage != null">welcome_message,</if>
            <if test="knowledgeId != null">knowledge_id,</if>
            <if test="pluginId != null">plugin_id,</if>
            <if test="mcp != null">mcp,</if>
            <if test="workflowId != null">workflow_id,</if>
            <if test="publishedAt != null">published_at,</if>
            <if test="publishedBy != null">published_by,</if>
            <if test="publishVersion != null">publish_version,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id}::uuid,</if>
            <if test="tenantId != null">#{tenantId}::uuid,</if>
            <if test="name != null">#{name},</if>
            <if test="icon != null">#{icon},</if>
            <if test="iconBackground != null">#{iconBackground},</if>
            <if test="status != null">#{status},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
            <if test="description != null">#{description},</if>
            <if test="iconType != null">#{iconType},</if>
            <if test="createdBy != null">#{createdBy}::uuid,</if>
            <if test="updatedBy != null">#{updatedBy}::uuid,</if>
            <if test="prompt != null">#{prompt},</if>
            <if test="modelId != null">#{modelId}::uuid,</if>
            <if test="welcomeMessage != null">#{welcomeMessage},</if>
            <if test="knowledgeId != null">#{knowledgeId},</if>
            <if test="pluginId != null">#{pluginId},</if>
            <if test="mcp != null">#{mcp},</if>
            <if test="workflowId != null">#{workflowId}::uuid,</if>
            <if test="publishedAt != null">#{publishedAt},</if>
            <if test="publishedBy != null">#{publishedBy}::uuid,</if>
            <if test="publishVersion != null">#{publishVersion},</if>
        </trim>
    </insert>

    <!-- 修改应用 -->
    <update id="update" >
        update agent
        <set>
            <if test="tenantId != null">tenant_id = #{tenantId}::uuid,</if>
            <if test="name != null">name = #{name},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="iconBackground != null">icon_background = #{iconBackground},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="description != null">description = #{description},</if>
            <if test="iconType != null">icon_type = #{iconType},</if>
            <if test="updatedBy != null">updated_by = #{updatedBy}::uuid,</if>
            <if test="prompt != null">prompt = #{prompt},</if>
            <if test="modelId != null">model_id = #{modelId}::uuid,</if>
            <if test="welcomeMessage != null">welcome_message = #{welcomeMessage},</if>
            <if test="knowledgeId != null">knowledge_id = #{knowledgeId},</if>
            <if test="pluginId != null">plugin_id = #{pluginId},</if>
            <if test="mcp != null">mcp = #{mcp},</if>
            <if test="workflowId != null">workflow_id = #{workflowId}::uuid,</if>
            <if test="publishedAt != null">published_at = #{publishedAt},</if>
            <if test="publishedBy != null">published_by = #{publishedBy}::uuid,</if>
            <if test="publishVersion != null">publish_version = #{publishVersion},</if>
        </set>
        where id = #{id}::uuid
    </update>

    <!-- 通过ID删除应用 -->
    <delete id="deleteById">
        delete from agent where id = #{id}::uuid
    </delete>

    <!-- 通过ID批量删除应用 -->
    <delete id="deleteByIds">

        delete from agent where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}::uuid
        </foreach>
    </delete>
    
</mapper>
